    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build-PLU-server",
            "type": "shell",
            "command": "make",
            "args": [
                "plu3WfsMongo"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build-PLU-server-for-debug",
            "type": "shell",
            "command": "make",
            "args": [
                "debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run-PLU-server",
            "type": "shell",
            "dependsOn": [
                "Build-PLU-server"
            ],
            "command": "./plu3WfsMongo",
            "args": [
                "-k",
                "8090 &"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}